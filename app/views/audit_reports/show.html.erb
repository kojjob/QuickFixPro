<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    <!-- Enhanced Header with Animation -->
    <div class="sm:flex sm:items-center sm:justify-between mb-8 animate-fade-in">
      <div class="min-w-0 flex-1">
        <!-- Improved Breadcrumb -->
        <nav class="flex mb-4" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-sm">
            <li>
              <%= link_to websites_path, class: "text-gray-500 hover:text-indigo-600 transition-colors duration-200" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              <% end %>
            </li>
            <li class="flex items-center">
              <svg class="flex-shrink-0 w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to @audit_report.website.name, website_path(@audit_report.website),
                  class: "ml-2 text-gray-500 hover:text-indigo-600 transition-colors duration-200" %>
            </li>
            <li class="flex items-center">
              <svg class="flex-shrink-0 w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-2 text-gray-700 font-medium">Audit Report</span>
            </li>
          </ol>
        </nav>

        <!-- Enhanced Title and Metadata -->
        <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
          Performance Audit Report
        </h1>
        <div class="mt-2 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <svg class="mr-1.5 h-5 w-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <%= @audit_report.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          <div class="mt-2 flex items-center">
            <% case @audit_report.status %>
            <% when 'completed' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 ring-1 ring-inset ring-green-600/20">
                <span class="mr-1.5 flex h-2 w-2 relative">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                </span>
                Completed
              </span>
            <% when 'failed' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 ring-1 ring-inset ring-red-600/20">
                <svg class="mr-1.5 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                Failed
              </span>
            <% when 'in_progress' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
                <svg class="animate-spin mr-1.5 h-3 w-3" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                In Progress
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 ring-1 ring-inset ring-gray-600/20">
                <%= @audit_report.status.humanize %>
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Enhanced Action Button -->
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= button_to monitor_website_path(@audit_report.website),
            method: :post,
            class: "group relative inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-lg hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all duration-200 hover:shadow-xl hover:-translate-y-0.5",
            data: { turbo: true } do %>
          <svg class="mr-2 -ml-1 h-5 w-5 group-hover:animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Run New Audit
        <% end %>
      </div>
    </div>

    <% if @audit_report.status == 'completed' %>
      <!-- Enhanced Score Overview with Animated Cards -->
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Performance Metrics Overview</h2>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5">
          <!-- Overall Score Card with Circle Progress -->
          <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 p-6 text-white shadow-xl transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="relative z-10">
              <dt class="text-sm font-medium text-indigo-100">Overall Score</dt>
              <dd class="mt-2">
                <div class="flex items-baseline">
                  <span class="text-4xl font-bold animate-count-up" data-target="<%= @audit_report.overall_score %>">
                    <%= @audit_report.overall_score %>
                  </span>
                  <span class="ml-2 text-xl font-medium text-indigo-200">/100</span>
                </div>
                <div class="mt-2 flex items-center text-sm">
                  <% if @audit_report.overall_score >= 90 %>
                    <svg class="mr-1 h-4 w-4 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-indigo-100">Excellent</span>
                  <% elsif @audit_report.overall_score >= 50 %>
                    <svg class="mr-1 h-4 w-4 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-indigo-100">Good</span>
                  <% else %>
                    <svg class="mr-1 h-4 w-4 text-red-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-indigo-100">Needs Work</span>
                  <% end %>
                </div>
              </dd>
            </div>
            <div class="absolute -right-4 -bottom-4 opacity-10">
              <svg class="h-32 w-32" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>

          <!-- Performance Score Card -->
          <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg ring-1 ring-gray-900/5 transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-center justify-between">
              <div>
                <dt class="text-sm font-medium text-gray-500">Performance</dt>
                <dd class="mt-1">
                  <% if @audit_report.performance_score %>
                    <span class="text-3xl font-bold <%= @audit_report.performance_score >= 90 ? 'text-green-600' : @audit_report.performance_score >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= @audit_report.performance_score %>
                    </span>
                  <% else %>
                    <span class="text-3xl font-bold text-gray-400">—</span>
                  <% end %>
                </dd>
              </div>
              <div class="rounded-full bg-blue-50 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>
          </div>

          <!-- SEO Score Card -->
          <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg ring-1 ring-gray-900/5 transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-center justify-between">
              <div>
                <dt class="text-sm font-medium text-gray-500">SEO</dt>
                <dd class="mt-1">
                  <% if @audit_report.seo_score %>
                    <span class="text-3xl font-bold <%= @audit_report.seo_score >= 90 ? 'text-green-600' : @audit_report.seo_score >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= @audit_report.seo_score %>
                    </span>
                  <% else %>
                    <span class="text-3xl font-bold text-gray-400">—</span>
                  <% end %>
                </dd>
              </div>
              <div class="rounded-full bg-green-50 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Best Practices Card -->
          <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg ring-1 ring-gray-900/5 transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-center justify-between">
              <div>
                <dt class="text-sm font-medium text-gray-500">Best Practices</dt>
                <dd class="mt-1">
                  <% if @audit_report.best_practices_score %>
                    <span class="text-3xl font-bold <%= @audit_report.best_practices_score >= 90 ? 'text-green-600' : @audit_report.best_practices_score >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= @audit_report.best_practices_score %>
                    </span>
                  <% else %>
                    <span class="text-3xl font-bold text-gray-400">—</span>
                  <% end %>
                </dd>
              </div>
              <div class="rounded-full bg-purple-50 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Accessibility Card -->
          <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg ring-1 ring-gray-900/5 transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex items-center justify-between">
              <div>
                <dt class="text-sm font-medium text-gray-500">Accessibility</dt>
                <dd class="mt-1">
                  <% if @audit_report.accessibility_score %>
                    <span class="text-3xl font-bold <%= @audit_report.accessibility_score >= 90 ? 'text-green-600' : @audit_report.accessibility_score >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= @audit_report.accessibility_score %>
                    </span>
                  <% else %>
                    <span class="text-3xl font-bold text-gray-400">—</span>
                  <% end %>
                </dd>
              </div>
              <div class="rounded-full bg-orange-50 p-3">
                <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Core Web Vitals Section -->
      <% if @performance_metrics.any? %>
        <div class="mb-8">
          <div class="overflow-hidden rounded-2xl bg-white shadow-xl">
            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-4">
              <h3 class="text-lg font-semibold text-white">Core Web Vitals</h3>
              <p class="mt-1 text-sm text-indigo-100">Key metrics that impact user experience</p>
            </div>
            <div class="p-6">
              <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                <% @performance_metrics.each do |metric| %>
                  <div class="group relative rounded-xl border-2 border-gray-200 bg-gradient-to-br from-white to-gray-50 p-6 transition-all duration-300 hover:border-indigo-500 hover:shadow-lg">
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <div class="flex items-center">
                          <% case metric.metric_name %>
                          <% when 'largest_contentful_paint' %>
                            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 text-white shadow-lg">
                              <span class="text-sm font-bold">LCP</span>
                            </div>
                          <% when 'first_input_delay' %>
                            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gradient-to-br from-green-500 to-green-600 text-white shadow-lg">
                              <span class="text-sm font-bold">FID</span>
                            </div>
                          <% when 'cumulative_layout_shift' %>
                            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gradient-to-br from-purple-500 to-purple-600 text-white shadow-lg">
                              <span class="text-sm font-bold">CLS</span>
                            </div>
                          <% else %>
                            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gradient-to-br from-gray-500 to-gray-600 text-white shadow-lg">
                              <span class="text-sm font-bold">M</span>
                            </div>
                          <% end %>
                          <div class="ml-4">
                            <dt class="text-sm font-medium text-gray-600">
                              <%= metric.metric_name.humanize %>
                            </dt>
                            <dd class="mt-1">
                              <span class="text-2xl font-bold text-gray-900">
                                <%= metric.value %>
                              </span>
                              <% if metric.metric_name.include?('time') || metric.metric_name.include?('paint') || metric.metric_name.include?('delay') %>
                                <span class="ml-1 text-sm font-medium text-gray-500">ms</span>
                              <% end %>
                            </dd>
                          </div>
                        </div>

                        <!-- Performance Indicator Bar -->
                        <div class="mt-4">
                          <div class="flex items-center justify-between text-xs">
                            <span class="text-green-600">Good</span>
                            <span class="text-yellow-600">Needs Improvement</span>
                            <span class="text-red-600">Poor</span>
                          </div>
                          <div class="mt-1 flex h-2 overflow-hidden rounded-full bg-gray-200">
                            <div class="bg-gradient-to-r from-green-500 to-green-400" style="width: 33.33%"></div>
                            <div class="bg-gradient-to-r from-yellow-500 to-yellow-400" style="width: 33.33%"></div>
                            <div class="bg-gradient-to-r from-red-500 to-red-400" style="width: 33.33%"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Enhanced Recommendations Section -->
      <% if @recommendations.any? %>
        <div class="mb-8">
          <div class="overflow-hidden rounded-2xl bg-white shadow-xl">
            <div class="bg-gradient-to-r from-green-500 to-teal-600 px-6 py-4">
              <h3 class="text-lg font-semibold text-white">Optimization Recommendations</h3>
              <p class="mt-1 text-sm text-green-100">Actionable insights to improve your site performance</p>
            </div>
            <div class="p-6">
              <div class="space-y-4">
                <% @recommendations.each_with_index do |recommendation, index| %>
                  <div class="group relative rounded-xl border-l-4 <%= recommendation.priority == 'high' ? 'border-red-500 bg-red-50' : recommendation.priority == 'medium' ? 'border-yellow-500 bg-yellow-50' : 'border-blue-500 bg-blue-50' %> p-6 transition-all duration-300 hover:shadow-lg" data-recommendation-id="<%= index %>">
                    <div class="flex items-start">
                      <div class="flex-shrink-0">
                        <% case recommendation.priority %>
                        <% when 'high' %>
                          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-red-100">
                            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                          </div>
                        <% when 'medium' %>
                          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-yellow-100">
                            <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                          </div>
                        <% else %>
                          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100">
                            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                          </div>
                        <% end %>
                      </div>
                      <div class="ml-4 flex-1">
                        <div class="flex items-center justify-between">
                          <h4 class="text-base font-semibold text-gray-900">
                            <%= recommendation.title %>
                          </h4>
                          <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= recommendation.priority == 'high' ? 'bg-red-100 text-red-800' : recommendation.priority == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %>">
                            <%= recommendation.priority.capitalize %> Priority
                          </span>
                        </div>
                        <p class="mt-2 text-sm text-gray-600">
                          <%= recommendation.description %>
                        </p>
                        <% if recommendation.impact_description %>
                          <div class="mt-3 rounded-lg bg-white bg-opacity-70 p-3">
                            <p class="text-sm">
                              <span class="font-medium text-gray-700">Expected Impact:</span>
                              <span class="text-gray-600"><%= recommendation.impact_description %></span>
                            </p>
                          </div>
                        <% end %>
                        <div class="mt-4 flex items-center space-x-4">
                          <button class="text-sm font-medium text-indigo-600 hover:text-indigo-500 transition-colors duration-200">
                            View Details →
                          </button>
                          <button class="text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-200">
                            Mark as Done
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    <% elsif @audit_report.status == 'failed' %>
      <!-- Enhanced Error State -->
      <div class="mt-8">
        <div class="rounded-2xl bg-gradient-to-r from-red-50 to-red-100 p-8 shadow-xl">
          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-red-100">
                <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-red-900">
                Audit Failed
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <p class="mb-3">The audit could not be completed successfully. Possible reasons include:</p>
                <ul class="list-disc list-inside space-y-1">
                  <li>Website was not accessible during the audit</li>
                  <li>Network timeout occurred</li>
                  <li>Website returned an error response</li>
                  <li>Internal system error occurred</li>
                </ul>
                <% if @audit_report.error_message %>
                  <div class="mt-4 rounded-lg bg-red-200 bg-opacity-50 p-4">
                    <p class="font-semibold text-red-900">Error Details:</p>
                    <p class="mt-1 font-mono text-xs text-red-800"><%= @audit_report.error_message %></p>
                  </div>
                <% end %>
              </div>
