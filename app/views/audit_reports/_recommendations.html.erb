<!-- Enhanced Recommendations Section -->
<div class="bg-white overflow-hidden shadow-xl rounded-2xl" data-controller="audit-report" data-audit-report-report-id-value="<%= audit_report.id %>">
  <div class="bg-gradient-to-r from-amber-500 to-orange-600 px-6 py-4">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-xl font-bold text-white flex items-center">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          Recommendations
        </h3>
        <p class="mt-1 text-sm text-amber-100">Actionable insights to improve your website performance</p>
      </div>
      <div class="flex items-center space-x-2">
        <span class="bg-white/20 px-3 py-1 rounded-full text-xs font-medium text-white">
          <%= audit_report.recommendations&.count || 0 %> Total
        </span>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="border-b border-gray-200 bg-gray-50 px-6 py-3">
    <div class="flex items-center justify-between">
      <div class="flex space-x-2">
        <button data-action="click->audit-report#filterRecommendations"
                data-priority="all"
                data-audit-report-target="filterButton"
                class="px-4 py-2 text-sm font-medium rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 transition-colors duration-200">
          All
        </button>
        <button data-action="click->audit-report#filterRecommendations"
                data-priority="critical"
                data-audit-report-target="filterButton"
                class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-200 border border-gray-300">
          <span class="flex items-center">
            <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
            Critical
          </span>
        </button>
        <button data-action="click->audit-report#filterRecommendations"
                data-priority="high"
                data-audit-report-target="filterButton"
                class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-200 border border-gray-300">
          <span class="flex items-center">
            <span class="w-2 h-2 bg-orange-500 rounded-full mr-2"></span>
            High
          </span>
        </button>
        <button data-action="click->audit-report#filterRecommendations"
                data-priority="medium"
                data-audit-report-target="filterButton"
                class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-200 border border-gray-300">
          <span class="flex items-center">
            <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2"></span>
            Medium
          </span>
        </button>
        <button data-action="click->audit-report#filterRecommendations"
                data-priority="low"
                data-audit-report-target="filterButton"
                class="px-4 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-200 border border-gray-300">
          <span class="flex items-center">
            <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
            Low
          </span>
        </button>
      </div>

      <div class="text-sm text-gray-500">
        Sorted by priority
      </div>
    </div>
  </div>

  <!-- Recommendations List -->
  <div class="p-6">
    <% if audit_report.recommendations&.any? %>
      <div class="space-y-4">
        <%
          # Sort and categorize recommendations
          recommendations = audit_report.recommendations
          if recommendations.is_a?(Array)
            critical_recommendations = recommendations.select { |r| r['priority'] == 'critical' || r['severity'] == 'critical' }
            high_recommendations = recommendations.select { |r| r['priority'] == 'high' || r['severity'] == 'high' }
            medium_recommendations = recommendations.select { |r| r['priority'] == 'medium' || r['severity'] == 'medium' }
            low_recommendations = recommendations.select { |r| r['priority'] == 'low' || r['severity'] == 'low' || (!r['priority'] && !r['severity']) }
          else
            critical_recommendations = []
            high_recommendations = []
            medium_recommendations = []
            low_recommendations = []
          end

          all_recommendations = critical_recommendations + high_recommendations + medium_recommendations + low_recommendations
        %>

        <% all_recommendations.each_with_index do |recommendation, index| %>
          <%
            priority = recommendation['priority'] || recommendation['severity'] || 'low'
            category = recommendation['category'] || 'general'

            priority_color = case priority
                           when 'critical' then 'red'
                           when 'high' then 'orange'
                           when 'medium' then 'yellow'
                           else 'blue'
                           end

            category_icon = case category
                           when 'performance' then 'M13 10V3L4 14h7v7l9-11h-7z'
                           when 'seo' then 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'
                           when 'accessibility' then 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'
                           when 'security' then 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z'
                           else 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
                           end
          %>

          <div class="recommendation-card group relative rounded-xl border-2 border-gray-200 bg-white p-6 transition-all duration-300 hover:border-<%= priority_color %>-300 hover:shadow-lg"
               data-priority="<%= priority %>"
               data-category="<%= category %>">

            <!-- Priority Indicator -->
            <div class="absolute -top-2 -left-2">
              <div class="flex items-center justify-center w-8 h-8 rounded-full bg-<%= priority_color %>-500 text-white shadow-lg">
                <span class="text-xs font-bold"><%= index + 1 %></span>
              </div>
            </div>

            <!-- Main Content -->
            <div class="ml-4">
              <!-- Header -->
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-start space-x-3">
                  <!-- Category Icon -->
                  <div class="flex-shrink-0 p-2 bg-<%= priority_color %>-50 rounded-lg">
                    <svg class="w-5 h-5 text-<%= priority_color %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= category_icon %>"></path>
                    </svg>
                  </div>

                  <!-- Title and Description -->
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 mb-1">
                      <%= recommendation['title'] || 'Optimization Opportunity' %>
                    </h4>
                    <p class="text-sm text-gray-600">
                      <%= recommendation['description'] || recommendation['message'] || 'Consider implementing this improvement.' %>
                    </p>
                  </div>
                </div>

                <!-- Expand/Collapse Button -->
                <button data-action="click->audit-report#toggleRecommendation"
                        data-recommendation-id="<%= index %>"
                        class="flex-shrink-0 p-1 text-gray-400 hover:text-gray-600 transition-colors duration-200">
                  <svg class="chevron-icon w-5 h-5 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              </div>

              <!-- Metadata -->
              <div class="flex items-center space-x-4 mb-3 text-xs">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full font-medium bg-<%= priority_color %>-100 text-<%= priority_color %>-800">
                  <%= priority.capitalize %> Priority
                </span>
                <span class="text-gray-500">
                  Category: <%= category.capitalize %>
                </span>
                <% if recommendation['impact'] %>
                  <span class="text-gray-500">
                    Impact: <%= recommendation['impact'] %>
                  </span>
                <% end %>
                <% if recommendation['effort'] %>
                  <span class="text-gray-500">
                    Effort: <%= recommendation['effort'] %>
                  </span>
                <% end %>
              </div>

              <!-- Expandable Details -->
              <div id="recommendation-detail-<%= index %>" class="hidden mt-4 pt-4 border-t border-gray-200">
                <% if recommendation['details'] %>
                  <div class="mb-4">
                    <h5 class="text-sm font-semibold text-gray-700 mb-2">Details:</h5>
                    <div class="text-sm text-gray-600 space-y-1">
                      <% if recommendation['details'].is_a?(Array) %>
                        <ul class="list-disc list-inside space-y-1">
                          <% recommendation['details'].each do |detail| %>
                            <li><%= detail %></li>
                          <% end %>
                        </ul>
                      <% else %>
                        <p><%= recommendation['details'] %></p>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <% if recommendation['how_to_fix'] || recommendation['solution'] %>
                  <div class="mb-4">
                    <h5 class="text-sm font-semibold text-gray-700 mb-2">How to Fix:</h5>
                    <div class="text-sm text-gray-600 bg-gray-50 rounded-lg p-3">
                      <%= recommendation['how_to_fix'] || recommendation['solution'] %>
                    </div>
                  </div>
                <% end %>

                <% if recommendation['resources'] %>
                  <div class="mb-4">
                    <h5 class="text-sm font-semibold text-gray-700 mb-2">Resources:</h5>
                    <ul class="text-sm space-y-1">
                      <% recommendation['resources'].each do |resource| %>
                        <li>
                          <a href="<%= resource['url'] || resource %>" target="_blank" rel="noopener" class="text-indigo-600 hover:text-indigo-800 underline">
                            <%= resource['title'] || resource['url'] || resource %>
                          </a>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <!-- Action Buttons -->
                <div class="flex items-center space-x-3 mt-4">
                  <button data-action="click->audit-report#markAsDone"
                          data-recommendation-id="<%= index %>"
                          class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Mark as Done
                  </button>

                  <button class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Get Help
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Summary Stats -->
      <div class="mt-8 p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl border border-gray-200">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-red-600"><%= critical_recommendations.count %></div>
            <div class="text-xs text-gray-600">Critical</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-orange-600"><%= high_recommendations.count %></div>
            <div class="text-xs text-gray-600">High</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-yellow-600"><%= medium_recommendations.count %></div>
            <div class="text-xs text-gray-600">Medium</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= low_recommendations.count %></div>
            <div class="text-xs text-gray-600">Low</div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No recommendations</h3>
        <p class="mt-1 text-sm text-gray-500">Your website is performing excellently!</p>
      </div>
    <% end %>
  </div>
</div>