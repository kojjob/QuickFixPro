<tr id="<%= dom_id(audit_report) %>" class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= link_to audit_report.website.name, website_path(audit_report.website), 
        class: "text-indigo-600 hover:text-indigo-900" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
      <%= case audit_report.audit_type
         when 'manual' then 'bg-blue-100 text-blue-800'
         when 'scheduled' then 'bg-purple-100 text-purple-800'
         when 'api_triggered' then 'bg-green-100 text-green-800'
         else 'bg-gray-100 text-gray-800'
         end %>">
      <%= audit_report.audit_type.humanize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <% if audit_report.overall_score %>
      <div class="flex items-center">
        <span class="text-2xl font-bold 
          <%= case audit_report.performance_grade
             when 'A' then 'text-green-600'
             when 'B' then 'text-green-500'
             when 'C' then 'text-yellow-500'
             when 'D' then 'text-orange-500'
             when 'F' then 'text-red-500'
             else 'text-gray-400'
             end %>">
          <%= audit_report.performance_grade %>
        </span>
        <span class="ml-2 text-gray-500">(<%= audit_report.overall_score %>/100)</span>
      </div>
    <% else %>
      <span class="text-gray-400">-</span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
      <%= case audit_report.status
         when 'pending' then 'bg-yellow-100 text-yellow-800'
         when 'running' then 'bg-blue-100 text-blue-800 animate-pulse'
         when 'completed' then 'bg-green-100 text-green-800'
         when 'failed' then 'bg-red-100 text-red-800'
         when 'cancelled' then 'bg-gray-100 text-gray-800'
         else 'bg-gray-100 text-gray-800'
         end %>">
      <%= audit_report.status.humanize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= audit_report.created_at.strftime('%b %d, %Y at %I:%M %p') %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <% if audit_report.completed? %>
      <%= link_to "View", website_audit_report_path(audit_report.website, audit_report), 
          class: "text-indigo-600 hover:text-indigo-900" %>
    <% elsif audit_report.running? %>
      <span class="text-gray-400">Running...</span>
    <% elsif audit_report.failed? %>
      <%= link_to "Retry", "#", 
          class: "text-indigo-600 hover:text-indigo-900" %>
    <% else %>
      <span class="text-gray-400">Pending</span>
    <% end %>
  </td>
</tr>