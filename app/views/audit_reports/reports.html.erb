              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-600 text-sm font-medium">Storage Used</p>
            <p class="text-2xl font-bold text-gray-900"><%= @report_stats[:storage_used] %></p>
          </div>
          <div class="p-3 bg-orange-100 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Report Functionality -->
<script>
function generateReport() {
  // In a real app, this would trigger a background job to generate a report
  console.log('Generating new report...');
  alert('Report generation started! You will receive an email when it\'s ready.');
}

function generateCustomReport() {
  const reportType = document.querySelector('input[name="report_type"]:checked').value;
  const dateFrom = document.querySelector('input[type="date"]').value;
  const dateTo = document.querySelectorAll('input[type="date"]')[1].value;
  const sections = Array.from(document.querySelectorAll('input[type="checkbox"]:checked'))
                      .map(cb => cb.nextElementSibling.textContent);
  
  console.log('Generating custom report:', {
    type: reportType,
    dateRange: `${dateFrom} to ${dateTo}`,
    sections: sections
  });
  
  alert('Custom report generation started! This may take a few minutes.');
}

function generateTemplate(templateId) {
  console.log(`Generating template report: ${templateId}`);
  alert(`Generating ${templateId} report template...`);
}

function setQuickDate(period) {
  const toDate = new Date();
  let fromDate = new Date();
  
  switch(period) {
    case '7d':
      fromDate.setDate(toDate.getDate() - 7);
      break;
    case '30d':
      fromDate.setDate(toDate.getDate() - 30);
      break;
    case '90d':
      fromDate.setDate(toDate.getDate() - 90);
      break;
    case '1y':
      fromDate.setFullYear(toDate.getFullYear() - 1);
      break;
  }
  
  document.querySelector('input[type="date"]').value = fromDate.toISOString().split('T')[0];
  document.querySelectorAll('input[type="date"]')[1].value = toDate.toISOString().split('T')[0];
}

function downloadReport(reportId) {
  console.log(`Downloading report: ${reportId}`);
  // In a real app, this would initiate a file download
  alert('Download started! Check your downloads folder.');
}

function viewReport(reportId) {
  console.log(`Viewing report: ${reportId}`);
  // In a real app, this would open the report in a new tab or modal
  alert('Opening report viewer...');
}

function shareReport(reportId) {
  console.log(`Sharing report: ${reportId}`);
  // In a real app, this would open a sharing dialog
  alert('Share functionality would open here with options to email or generate public links.');
}

function deleteReport(reportId) {
  if (confirm('Are you sure you want to delete this report? This action cannot be undone.')) {
    console.log(`Deleting report: ${reportId}`);
    alert('Report deleted successfully!');
    window.location.reload();
  }
}

// Auto-save form state
document.addEventListener('change', function(e) {
  if (e.target.type === 'checkbox' || e.target.type === 'radio' || e.target.type === 'date') {
    // In a real app, you might save form state to localStorage
    console.log('Form state changed, auto-saving...');
  }
});
</script>