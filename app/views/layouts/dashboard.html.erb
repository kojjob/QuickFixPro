                  Dashboard
                <% end %>
                <%= link_to billing_subscription_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 #{'bg-blue-50 text-blue-600' if current_page?(billing_subscription_path)}" do %>
                  Plans & Pricing
                <% end %>
                <%= link_to billing_payment_history_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-b-lg #{'bg-blue-50 text-blue-600' if current_page?(billing_payment_history_path)}" do %>
                  Payment History
                <% end %>
              </div>
