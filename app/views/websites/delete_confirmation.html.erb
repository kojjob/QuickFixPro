<%# Delete Confirmation Modal Content %>

<div class="max-w-lg">
  <div class="sm:flex sm:items-start">
    <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
      <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
    </div>
    <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
      <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">
        Delete Website
      </h3>
      <div class="mt-2">
        <p class="text-sm text-gray-500">
          Are you sure you want to delete "<%= @website.name %>"? This action cannot be undone.
        </p>
        <div class="mt-3 p-3 bg-yellow-50 rounded-lg border border-yellow-200">
          <div class="flex items-start">
            <svg class="flex-shrink-0 h-5 w-5 text-yellow-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.485 3.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 3.495zM10 6a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 6zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
            <div class="ml-2">
              <h4 class="text-sm font-medium text-yellow-800">What will be deleted:</h4>
              <div class="mt-1 text-sm text-yellow-700">
                <ul class="list-disc list-inside space-y-1">
                  <li>All audit reports (<%= @website.audit_reports.count %> reports)</li>
                  <li>All performance metrics and history</li>
                  <li>All monitoring alerts and settings</li>
                  <li>This cannot be undone</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 sm:flex sm:flex-row-reverse">
    <%= link_to "Delete Website", quick_destroy_website_path(@website),
        method: :delete,
        data: { 
          turbo: true,
          turbo_method: :delete,
          turbo_confirm: false,
          action: "modal#close"
        },
        class: "inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto" %>
    <button
      type="button"
      class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
      data-action="modal#close"
    >
      Cancel
    </button>
  </div>
</div>

<script nonce="<%= csp_nonce %>">
document.addEventListener('turbo:frame-load', function() {
  // Focus the cancel button for better UX
  const cancelButton = document.querySelector('[data-action="modal#close"]')
  if (cancelButton) {
    cancelButton.focus()
  }
})
</script>