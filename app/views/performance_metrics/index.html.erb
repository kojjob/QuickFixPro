<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50" data-controller="performance-metrics">
  <!-- Enhanced Header -->
  <div class="relative bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-600 shadow-xl">
    <div class="absolute inset-0 bg-black opacity-10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <nav class="flex items-center text-white/80 text-sm mb-2">
            <%= link_to "Websites", websites_path, class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <%= link_to @website.name, website_path(@website), class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-white">Performance Metrics</span>
          </nav>
          <h1 class="text-4xl font-bold text-white tracking-tight flex items-center">
            <svg class="w-10 h-10 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Performance Metrics
          </h1>
          <p class="mt-2 text-indigo-100 text-lg">Detailed performance analysis and Core Web Vitals monitoring for <%= @website.name %></p>
        </div>
        
        <!-- Export Options -->
        <div class="flex items-center space-x-4">
          <!-- CSV Export -->
          <%= link_to website_performance_metrics_path(@website, format: :csv), 
              class: "bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg hover:bg-white/30 transition-all duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span>Export CSV</span>
          <% end %>
          
          <!-- JSON API -->
          <%= link_to website_performance_metrics_path(@website, format: :json), 
              class: "bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg hover:bg-white/30 transition-all duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>JSON API</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Filters Section -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
        </svg>
        Filter Performance Metrics
      </h3>
      
      <form method="get" action="<%= website_performance_metrics_path(@website) %>" 
            class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Category Filter -->
        <select name="category" class="rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All Categories</option>
          <option value="core_web_vitals" <%= 'selected' if params[:category] == 'core_web_vitals' %>>Core Web Vitals</option>
          <option value="navigation_timing" <%= 'selected' if params[:category] == 'navigation_timing' %>>Navigation Timing</option>
          <option value="resources" <%= 'selected' if params[:category] == 'resources' %>>Resources</option>
          <option value="lighthouse" <%= 'selected' if params[:category] == 'lighthouse' %>>Lighthouse</option>
        </select>
        
        <!-- Metric Name Filter -->
        <select name="metric_name" class="rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">All Metrics</option>
          <option value="largest_contentful_paint" <%= 'selected' if params[:metric_name] == 'largest_contentful_paint' %>>Largest Contentful Paint</option>
          <option value="first_contentful_paint" <%= 'selected' if params[:metric_name] == 'first_contentful_paint' %>>First Contentful Paint</option>
          <option value="cumulative_layout_shift" <%= 'selected' if params[:metric_name] == 'cumulative_layout_shift' %>>Cumulative Layout Shift</option>
          <option value="time_to_first_byte" <%= 'selected' if params[:metric_name] == 'time_to_first_byte' %>>Time to First Byte</option>
        </select>
        
        <!-- Date Range -->
        <div class="grid grid-cols-2 gap-2">
          <input type="date" name="date_from" value="<%= params[:date_from] %>" 
                 class="rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
          <input type="date" name="date_to" value="<%= params[:date_to] %>" 
                 class="rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
        </div>
        
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors font-medium">
          Apply Filters
        </button>
      </form>
    </div>

    <!-- Core Web Vitals Overview -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Core Web Vitals Summary
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% [
          { 
            key: 'largest_contentful_paint', 
            label: 'Largest Contentful Paint', 
            color: 'blue', 
            good: 2500, 
            poor: 4000, 
            unit: 'ms',
            description: 'Loading performance'
          },
          { 
            key: 'first_contentful_paint', 
            label: 'First Contentful Paint', 
            color: 'green', 
            good: 1800, 
            poor: 3000, 
            unit: 'ms',
            description: 'Initial render time'
          },
          { 
            key: 'cumulative_layout_shift', 
            label: 'Cumulative Layout Shift', 
            color: 'purple', 
            good: 0.1, 
            poor: 0.25, 
            unit: '',
            description: 'Visual stability'
          }
        ].each do |metric| %>
          <% metric_data = @grouped_metrics[:core_web_vitals][metric[:key]] || [] %>
          <div class="bg-gradient-to-br from-<%= metric[:color] %>-50 to-<%= metric[:color] %>-100 rounded-xl p-6 border border-<%= metric[:color] %>-200">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-sm font-bold text-<%= metric[:color] %>-900"><%= metric[:label] %></h4>
              <div class="text-xs text-<%= metric[:color] %>-700 bg-<%= metric[:color] %>-200 px-2 py-1 rounded-full">
                <%= metric[:description] %>
              </div>
            </div>
            
            <% if metric_data.any? %>
              <% latest_value = metric_data.last.metric_value.to_f %>
              <% 
                status = if latest_value <= metric[:good]
                  { color: 'green', label: 'Good' }
                elsif latest_value <= metric[:poor]
                  { color: 'yellow', label: 'Needs Improvement' }
                else
                  { color: 'red', label: 'Poor' }
                end
              %>
              
              <div class="mb-4">
                <p class="text-3xl font-bold text-gray-900">
                  <%= latest_value %><span class="text-sm text-gray-500"><%= metric[:unit] %></span>
                </p>
                <div class="flex items-center mt-2">
                  <div class="w-2 h-2 bg-<%= status[:color] %>-500 rounded-full mr-2"></div>
                  <span class="text-sm font-medium text-<%= status[:color] %>-700"><%= status[:label] %></span>
                </div>
              </div>
              
              <!-- Mini trend chart -->
              <div class="h-16 flex items-end space-x-1">
                <% max_value = metric_data.map { |d| d.metric_value.to_f }.max %>
                <% metric_data.last(10).each do |point| %>
                  <% height = max_value > 0 ? (point.metric_value.to_f / max_value * 100) : 0 %>
                  <div class="flex-1 bg-<%= metric[:color] %>-400 rounded-t opacity-70 hover:opacity-100 transition-opacity" 
                       style="height: <%= height %>%"
                       title="<%= point.measurement_time.strftime('%b %d') %>: <%= point.metric_value %><%= metric[:unit] %>">
                  </div>
                <% end %>
              </div>
              
              <div class="mt-3 pt-3 border-t border-<%= metric[:color] %>-200">
                <p class="text-xs text-<%= metric[:color] %>-700">
                  Target: < <%= metric[:good] %><%= metric[:unit] %> | 
                  <%= metric_data.size %> measurements
                </p>
              </div>
            <% else %>
              <div class="text-center py-4">
                <svg class="w-8 h-8 text-<%= metric[:color] %>-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-4.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 009.586 13H7"/>
                </svg>
                <p class="text-sm text-<%= metric[:color] %>-600">No data available</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Time Series Charts -->
    <% if @time_series_data.any? %>
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
          </svg>
          Performance Trends (Last 30 Days)
        </h3>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <% @time_series_data.each do |metric_name, data_points| %>
            <div class="bg-gray-50 rounded-xl p-6">
              <h4 class="text-lg font-semibold text-gray-900 mb-4 capitalize">
                <%= metric_name.humanize %>
              </h4>
              
              <!-- Placeholder for actual chart -->
              <div class="h-48 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-lg flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-12 h-12 text-indigo-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  </svg>
                  <p class="text-sm text-gray-600">Chart visualization</p>
                  <p class="text-xs text-gray-500 mt-1"><%= data_points.size %> data points</p>
                </div>
              </div>
              
              <!-- Recent values -->
              <div class="mt-4 text-xs text-gray-500">
                <% if data_points.any? %>
                  <div class="flex justify-between">
                    <span>Latest: <%= data_points.last[1] %></span>
                    <span>Avg: <%= (data_points.map(&:last).sum / data_points.size).round(2) %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Metrics by Category -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <% @grouped_metrics.each do |category, metrics| %>
        <% next if metrics.empty? %>
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center capitalize">
            <% case category %>
            <% when :core_web_vitals %>
              <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            <% when :navigation %>
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% when :resources %>
              <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            <% when :lighthouse %>
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            <% end %>
            <%= category.to_s.humanize %>
          </h3>
          
          <div class="space-y-4">
            <% metrics.each do |metric_name, metric_list| %>
              <% latest_metric = metric_list.last %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-1">
                  <h4 class="font-medium text-gray-900 capitalize">
                    <%= link_to metric_name.humanize, website_performance_metric_path(@website, latest_metric), 
                        class: "hover:text-indigo-600 transition-colors" %>
                  </h4>
                  <p class="text-sm text-gray-500">
                    Last measured: <%= latest_metric.measurement_time.strftime("%b %d, %Y at %I:%M %p") %>
                  </p>
                </div>
                <div class="text-right">
                  <p class="font-bold text-gray-900">
                    <%= latest_metric.metric_value %>
                    <span class="text-sm text-gray-500"><%= latest_metric.unit %></span>
                  </p>
                  <p class="text-xs text-gray-500"><%= metric_list.size %> measurements</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Recent Measurements -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-8 py-6 border-b border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 flex items-center">
          <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          Recent Performance Measurements
        </h3>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metric</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Measured</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @metrics.any? %>
              <% @metrics.limit(20).each do |metric| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900 capitalize">
                      <%= metric.metric_name.humanize %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= metric.metric_value %> <span class="text-gray-500"><%= metric.unit %></span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                      case metric.category
                      when 'core_web_vitals' then 'bg-red-100 text-red-800'
                      when 'navigation_timing' then 'bg-blue-100 text-blue-800'
                      when 'resources' then 'bg-green-100 text-green-800'
                      when 'lighthouse' then 'bg-purple-100 text-purple-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                      <%= metric.category.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= metric.measurement_time.strftime("%b %d, %Y %I:%M %p") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View Details", website_performance_metric_path(@website, metric), 
                        class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center">
                  <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  <h3 class="text-lg font-medium text-gray-900">No performance metrics found</h3>
                  <p class="text-gray-500 mt-2">
                    <% if params.values.any?(&:present?) %>
                      Try adjusting your filters to see more metrics.
                    <% else %>
                      Performance metrics will appear here once audits are completed.
                    <% end %>
                  </p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>