<div class="space-y-4" data-dashboard-target="activityFeed" role="feed" aria-label="Recent activity feed">
  <% if @recent_activity.any? %>
    <% @recent_activity.first(5).each do |activity| %>
      <div class="flex items-start space-x-3 transition-all duration-300 hover:bg-gray-50 rounded-lg p-2 -mx-2" 
           data-activity-item 
           role="article"
           aria-label="<%= activity[:type].humanize %> activity from <%= time_ago_in_words(activity[:timestamp]) %> ago">
        <div class="flex-shrink-0">
          <% if activity[:type] == 'audit_completed' %>
            <div class="w-8 h-8 bg-emerald-500/10 rounded-full flex items-center justify-center" 
                 aria-label="Audit completed">
              <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% elsif activity[:type] == 'website_added' %>
            <div class="w-8 h-8 bg-blue-500/10 rounded-full flex items-center justify-center" 
                 aria-label="Website added">
              <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% else %>
            <div class="w-8 h-8 bg-amber-500/10 rounded-full flex items-center justify-center" 
                 aria-label="Alert">
              <svg class="w-4 h-4 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm text-gray-900 leading-relaxed">
            <%= activity[:message] %>
            <% if activity[:score].present? %>
              <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= activity[:score] >= 80 ? 'bg-emerald-50 text-emerald-700 ring-1 ring-emerald-600/20' : activity[:score] >= 60 ? 'bg-amber-50 text-amber-700 ring-1 ring-amber-600/20' : 'bg-red-50 text-red-700 ring-1 ring-red-600/20' %>">
                <%= activity[:score] %>%
              </span>
            <% end %>
          </p>
          <p class="text-xs text-gray-500 mt-1 leading-normal">
            <%= time_ago_in_words(activity[:timestamp]) %> ago
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-8">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-sm text-gray-500">No recent activity</p>
      <p class="text-xs text-gray-400 mt-1">Activities will appear here as they occur</p>
    </div>
  <% end %>
</div>