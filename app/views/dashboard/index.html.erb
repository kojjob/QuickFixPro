<div data-controller="dashboard" 
     data-dashboard-refresh-interval-value="30000"
     data-dashboard-auto-refresh-value="true">

<% content_for :page_header do %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Dashboard</h1>
      <nav class="mt-2 flex text-sm text-gray-600 leading-normal">
        <span>QuickFixPro</span>
        <span class="mx-2">/</span>
        <span class="text-gray-900">Dashboard</span>
      </nav>
    </div>
    <div class="flex items-center space-x-3">
      <!-- Refresh Indicator -->
      <div data-dashboard-target="refreshIndicator" class="hidden">
        <svg class="w-5 h-5 text-blue-600 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      
      <!-- Last Updated -->
      <span data-dashboard-target="lastUpdated" class="text-sm text-gray-500"></span>
      
      <!-- Auto-refresh Toggle -->
      <button data-action="click->dashboard#toggleAutoRefresh"
              data-auto-refresh-toggle
              class="px-3 py-1 text-sm bg-emerald-50 text-emerald-700 rounded-md hover:bg-emerald-100 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 ring-1 ring-emerald-600/20">
        Auto-refresh: ON
      </button>
      
      <!-- Manual Refresh -->
      <button data-action="click->dashboard#refresh"
              class="inline-flex items-center px-3 py-1 text-sm bg-gray-50 text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Refresh
      </button>
      
      <div class="h-6 w-px bg-gray-300"></div>
      
      <button class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Website
      </button>
      <button class="inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm">
        Generate Report
      </button>
    </div>
  </div>
<% end %>

<!-- Welcome Section -->
<div class="mb-8">
  <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl p-6 sm:p-8 text-white">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <div>
        <h2 class="text-xl sm:text-2xl font-semibold mb-2 tracking-tight">Welcome back, <%= current_user.first_name %>! ðŸ‘‹</h2>
        <p class="text-blue-100 text-sm sm:text-base leading-relaxed">Here's what's happening with your websites today.</p>
      </div>
      <div class="hidden lg:block">
        <svg class="w-32 h-32 text-blue-400 opacity-50" fill="currentColor" viewBox="0 0 20 20">
          <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Stats Cards Row -->
<%= turbo_frame_tag "dashboard-stats", src: dashboard_stats_path, loading: "lazy" do %>
  <%= render 'stats_cards' %>
<% end %>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Performance Trends Chart (2 columns wide) -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200/60 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-gray-900 tracking-tight">Performance Trends</h3>
        <div class="flex items-center space-x-1">
          <button data-dashboard-target="timeRangeButton"
                  data-action="click->dashboard#changeTimeRange"
                  data-range="day"
                  class="px-3 py-1 text-sm text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Day</button>
          <button data-dashboard-target="timeRangeButton"
                  data-action="click->dashboard#changeTimeRange"
                  data-range="week"
                  class="px-3 py-1 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-sm">Week</button>
          <button data-dashboard-target="timeRangeButton"
                  data-action="click->dashboard#changeTimeRange"
                  data-range="month"
                  class="px-3 py-1 text-sm text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Month</button>
        </div>
      </div>
      
      <!-- Performance Chart -->
      <%= turbo_frame_tag "performance-chart", src: dashboard_performance_chart_path(range: 'week'), loading: "lazy" do %>
        <%= render 'performance_chart' %>
      <% end %>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="lg:col-span-1">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200/60 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h4>
      
      <%= turbo_frame_tag "activity-feed", src: dashboard_activity_feed_path, loading: "lazy" do %>
        <%= render 'activity_feed' %>
      <% end %>
      
      <div class="mt-4 pt-4 border-t border-gray-200">
        <a href="#" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all activity â†’</a>
      </div>
    </div>
  </div>
</div>

<!-- Bottom Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-8">
  <!-- Top Performing Websites -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200/60 p-6">
    <div class="flex items-center justify-between mb-4">
      <h4 class="text-lg font-semibold text-gray-900">Top Performing Websites</h4>
      <a href="<%= websites_path %>" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all</a>
    </div>
    
    <div class="space-y-3">
      <% @websites.includes(:audit_reports).limit(5).each do |website| %>
        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= website.name %></p>
              <p class="text-xs text-gray-500"><%= website.display_url %></p>
            </div>
          </div>
          <div class="text-right">
            <% score = website.current_score || 0 %>
            <p class="text-lg font-semibold <%= score >= 80 ? 'text-green-600' : score >= 60 ? 'text-yellow-600' : 'text-red-600' %>">
              <%= score %>%
            </p>
            <p class="text-xs text-gray-500">Score</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Critical Issues -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200/60 p-6">
    <div class="flex items-center justify-between mb-4">
      <h4 class="text-lg font-semibold text-gray-900">Critical Issues</h4>
      <span class="px-2 py-1 text-xs font-medium bg-red-50 text-red-700 rounded-full ring-1 ring-red-600/20">
        <%= @critical_recommendations.count %> issues
      </span>
    </div>
    
    <div class="space-y-3" data-dashboard-target="criticalIssues">
      <% if @critical_recommendations.any? %>
        <% @critical_recommendations.first(5).each do |recommendation| %>
          <div class="p-3 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900"><%= recommendation.title %></p>
                <p class="text-xs text-gray-600 mt-1"><%= recommendation.website.name %></p>
              </div>
              <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">Critical</span>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-green-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm text-gray-600">No critical issues found!</p>
          <p class="text-xs text-gray-500 mt-1">Your websites are performing well</p>
        </div>
      <% end %>
    </div>
    
    <% if @critical_recommendations.any? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <a href="#" class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all issues â†’</a>
      </div>
    <% end %>
  </div>
</div>

</div> <!-- End of dashboard controller -->