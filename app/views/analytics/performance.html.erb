<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-indigo-50" data-controller="analytics-performance">
  <!-- Enhanced Header -->
  <div class="relative bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 shadow-xl">
    <div class="absolute inset-0 bg-black opacity-10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <nav class="flex items-center text-white/80 text-sm mb-2">
            <%= link_to "Analytics", analytics_path, class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-white">Performance Analysis</span>
          </nav>
          <h1 class="text-4xl font-bold text-white tracking-tight flex items-center">
            <svg class="w-10 h-10 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Performance Analytics
          </h1>
          <p class="mt-2 text-purple-100 text-lg">Deep insights into your website performance metrics</p>
        </div>
        
        <!-- Website Selector -->
        <div class="flex items-center space-x-4">
          <form method="get" action="<%= analytics_performance_path %>" class="flex items-center">
            <select name="website_id" onchange="this.form.submit()" 
                    class="bg-white/20 backdrop-blur-sm text-white placeholder-white/60 border-white/30 rounded-lg px-4 py-2 focus:ring-2 focus:ring-white/50">
              <option value="" <%= 'selected' unless params[:website_id].present? %>>All Websites</option>
              <% @websites.each do |website| %>
                <option value="<%= website.id %>" <%= 'selected' if params[:website_id] == website.id.to_s %>>
                  <%= website.name %>
                </option>
              <% end %>
            </select>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @website %>
      <!-- Single Website Performance -->
      <div class="space-y-8">
        <!-- Website Overview Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h2 class="text-2xl font-bold text-gray-900"><%= @performance_data[:website_name] %></h2>
              <p class="text-gray-500 mt-1"><%= @performance_data[:url] %></p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500">Current Score</p>
              <% current_score = @performance_data[:current_score] || 0 %>
              <% score_color = current_score >= 90 ? "green" : current_score >= 50 ? "yellow" : "red" %>
              <p class="text-4xl font-bold text-<%= score_color %>-600"><%= current_score %>%</p>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4">
              <p class="text-sm font-medium text-blue-900">Total Audits</p>
              <p class="text-2xl font-bold text-blue-700 mt-1"><%= @performance_data[:audit_count] %></p>
            </div>
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-4">
              <p class="text-sm font-medium text-purple-900">Average Score</p>
              <p class="text-2xl font-bold text-purple-700 mt-1"><%= @performance_data[:average_score] %>%</p>
            </div>
            <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-xl p-4">
              <p class="text-sm font-medium text-indigo-900">Score Trend</p>
              <p class="text-2xl font-bold text-indigo-700 mt-1 capitalize">
                <% trend_icon = case @performance_data[:score_trend]
                   when 'improving_fast' then '⬆️'
                   when 'improving' then '↗️'
                   when 'stable' then '➡️'
                   when 'declining' then '↘️'
                   when 'declining_fast' then '⬇️'
                   else '➡️'
                   end %>
                <%= trend_icon %> <%= @performance_data[:score_trend].humanize %>
              </p>
            </div>
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-4">
              <p class="text-sm font-medium text-gray-900">Last Audit</p>
              <p class="text-lg font-bold text-gray-700 mt-1">
                <%= @performance_data[:last_audit] ? time_ago_in_words(@performance_data[:last_audit]) + " ago" : "Never" %>
              </p>
            </div>
          </div>
        </div>

        <!-- Core Web Vitals -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Current Core Web Vitals
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
            <% [
              { key: :lcp, name: "LCP", label: "Largest Contentful Paint", unit: "ms", good: 2500, poor: 4000, color: "blue" },
              { key: :fcp, name: "FCP", label: "First Contentful Paint", unit: "ms", good: 1800, poor: 3000, color: "green" },
              { key: :cls, name: "CLS", label: "Cumulative Layout Shift", unit: "", good: 0.1, poor: 0.25, color: "yellow" },
              { key: :ttfb, name: "TTFB", label: "Time to First Byte", unit: "ms", good: 800, poor: 1800, color: "purple" },
              { key: :fid, name: "FID", label: "First Input Delay", unit: "ms", good: 100, poor: 300, color: "pink" }
            ].each do |vital| %>
              <% value = @core_web_vitals[vital[:key]] %>
              <div class="relative group">
                <div class="bg-gradient-to-br from-<%= vital[:color] %>-50 to-<%= vital[:color] %>-100 rounded-xl p-6 border border-<%= vital[:color] %>-200 hover:shadow-lg transition-all duration-200">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-bold text-<%= vital[:color] %>-900"><%= vital[:name] %></span>
                    <% if value %>
                      <% 
                        status = if vital[:unit].empty?
                          value <= vital[:good] ? "good" : value <= vital[:poor] ? "needs-improvement" : "poor"
                        else
                          value <= vital[:good] ? "good" : value <= vital[:poor] ? "needs-improvement" : "poor"
                        end
                        status_color = status == "good" ? "green" : status == "needs-improvement" ? "yellow" : "red"
                      %>
                      <span class="flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-<%= status_color %>-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-<%= status_color %>-500"></span>
                      </span>
                    <% end %>
                  </div>
                  <p class="text-3xl font-bold text-gray-900">
                    <%= value || "—" %>
                    <% if value && !vital[:unit].empty? %>
                      <span class="text-sm text-gray-500"><%= vital[:unit] %></span>
                    <% end %>
                  </p>
                  <p class="text-xs text-gray-600 mt-2"><%= vital[:label] %></p>
                  
                  <!-- Progress Bar -->
                  <% if value %>
                    <div class="mt-3">
                      <div class="flex items-center justify-between text-xs text-gray-500 mb-1">
                        <span>Good</span>
                        <span>Poor</span>
                      </div>
                      <div class="relative h-2 bg-gray-200 rounded-full overflow-hidden">
                        <% 
                          max_val = vital[:poor] * 1.5
                          percentage = [(value.to_f / max_val * 100), 100].min
                        %>
                        <div class="absolute inset-0 bg-gradient-to-r from-green-400 via-yellow-400 to-red-400"></div>
                        <div class="absolute top-0 left-0 h-full w-1 bg-gray-900" style="left: <%= percentage %>%"></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Performance History Chart -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
            </svg>
            Performance History
          </h3>
          
          <div class="h-64 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-4">
            <canvas id="performance-history-chart" data-performance-history="<%= @performance_history.to_json %>"></canvas>
          </div>
        </div>
      </div>
      
    <% else %>
      <!-- Aggregate Performance View -->
      <div class="space-y-8">
        <!-- Overview Stats -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Performance Overview</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-blue-900">Websites Analyzed</p>
                  <p class="text-3xl font-bold text-blue-700 mt-2"><%= @aggregate_performance[:websites_analyzed] %></p>
                </div>
                <svg class="w-12 h-12 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              </div>
            </div>
            
            <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-green-900">Total Audits</p>
                  <p class="text-3xl font-bold text-green-700 mt-2"><%= @aggregate_performance[:total_audits] %></p>
                </div>
                <svg class="w-12 h-12 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
              </div>
            </div>
            
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-purple-900">Average Score</p>
                  <p class="text-3xl font-bold text-purple-700 mt-2"><%= @aggregate_performance[:average_score] %>%</p>
                </div>
                <svg class="w-12 h-12 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
            </div>
            
            <div class="bg-gradient-to-br from-pink-50 to-pink-100 rounded-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-pink-900">Score Distribution</p>
                  <div class="flex items-center space-x-2 mt-2">
                    <% score_dist = @aggregate_performance[:score_distribution] %>
                    <div class="flex items-center">
                      <div class="w-3 h-3 bg-green-500 rounded-full mr-1"></div>
                      <span class="text-sm font-medium"><%= score_dist[:excellent] %></span>
                    </div>
                    <div class="flex items-center">
                      <div class="w-3 h-3 bg-yellow-500 rounded-full mr-1"></div>
                      <span class="text-sm font-medium"><%= score_dist[:good] %></span>
                    </div>
                    <div class="flex items-center">
                      <div class="w-3 h-3 bg-orange-500 rounded-full mr-1"></div>
                      <span class="text-sm font-medium"><%= score_dist[:needs_improvement] %></span>
                    </div>
                    <div class="flex items-center">
                      <div class="w-3 h-3 bg-red-500 rounded-full mr-1"></div>
                      <span class="text-sm font-medium"><%= score_dist[:poor] %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Websites Performance Comparison -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Website Performance Comparison
          </h3>
          
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead>
                <tr class="bg-gray-50">
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">LCP</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">FCP</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">CLS</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @websites_performance.each do |website| %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900"><%= website[:name] %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <% score_color = website[:score] >= 90 ? "green" : website[:score] >= 50 ? "yellow" : "red" %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-<%= score_color %>-100 text-<%= score_color %>-800">
                        <%= website[:score] %>%
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <% lcp_color = website[:lcp] && website[:lcp] <= 2500 ? "green" : website[:lcp] && website[:lcp] <= 4000 ? "yellow" : "red" %>
                      <span class="text-sm text-<%= lcp_color %>-600 font-medium">
                        <%= website[:lcp] ? "#{website[:lcp]}ms" : "—" %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <% fcp_color = website[:fcp] && website[:fcp] <= 1800 ? "green" : website[:fcp] && website[:fcp] <= 3000 ? "yellow" : "red" %>
                      <span class="text-sm text-<%= fcp_color %>-600 font-medium">
                        <%= website[:fcp] ? "#{website[:fcp]}ms" : "—" %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <% cls_color = website[:cls] && website[:cls] <= 0.1 ? "green" : website[:cls] && website[:cls] <= 0.25 ? "yellow" : "red" %>
                      <span class="text-sm text-<%= cls_color %>-600 font-medium">
                        <%= website[:cls] || "—" %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <%= link_to analytics_performance_path(website_id: website[:id]), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do %>
                        View Details →
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script nonce="<%= csp_nonce %>">
document.addEventListener('turbo:load', function() {
  const canvas = document.getElementById('performance-history-chart');
  if (canvas) {
    const ctx = canvas.getContext('2d');
    const data = JSON.parse(canvas.dataset.performanceHistory || '[]');
    
    // Simple line chart rendering (you can enhance this with Chart.js)
    if (data.length > 0) {
      // This is a placeholder - integrate with Chart.js for better visualization
      ctx.fillStyle = '#4F46E5';
      ctx.fillText('Performance trend visualization here', 10, 50);
    }
  }
});
</script>