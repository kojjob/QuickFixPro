<!-- Premium Header with Enhanced Gradient -->
<div class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-b-2xl shadow-xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-white">Billing & Subscription</h1>
          <p class="mt-1 text-blue-100">Manage your subscription and payment settings with ease</p>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <%= link_to billing_subscription_path, class: "inline-flex items-center px-6 py-3 bg-white bg-opacity-20 backdrop-blur-sm text-white rounded-xl hover:bg-opacity-30 transition-all duration-200 font-semibold shadow-lg border border-white border-opacity-20" do %>
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Manage Plans
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 pt-8">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Premium Current Plan Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8 border border-gray-200">
      <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-8 py-8 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white bg-opacity-10 rounded-full -translate-y-16 translate-x-16"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white bg-opacity-5 rounded-full translate-y-12 -translate-x-12"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              </div>
              <div>
                <p class="text-blue-100 text-sm font-medium tracking-wider uppercase">Current Plan</p>
                <h2 class="text-3xl font-bold text-white mt-1">
                  <%= @subscription ? @subscription.plan_name.capitalize : 'No Active Plan' %>
                </h2>
              </div>
            </div>
            <% if @subscription && @subscription.subscription_active? %>
              <div class="text-right">
                <p class="text-blue-100 text-sm font-medium">Monthly Cost</p>
                <div class="flex items-baseline">
                  <span class="text-4xl font-bold text-white">$<%= number_with_precision(@subscription.monthly_price, precision: 0) %></span>
                  <span class="text-blue-100 ml-1">/month</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="px-8 py-8 bg-gray-50">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Enhanced Status Card -->
          <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
            <div class="flex items-center justify-between mb-3">
              <p class="text-sm font-medium text-gray-500">Status</p>
              <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="flex items-center">
              <% if @subscription %>
                <% status_color = @subscription.subscription_active? ? 'green' : 'red' %>
                <span class="flex h-3 w-3 relative mr-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-<%= status_color %>-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-<%= status_color %>-500"></span>
                </span>
                <p class="text-lg font-semibold text-gray-900"><%= @subscription.status.humanize %></p>
              <% else %>
                <span class="flex h-3 w-3 relative mr-3">
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-gray-400"></span>
                </span>
                <p class="text-lg font-semibold text-gray-900">Inactive</p>
              <% end %>
            </div>
          </div>
          
          <!-- Enhanced Next Billing Date Card -->
          <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
            <div class="flex items-center justify-between mb-3">
              <p class="text-sm font-medium text-gray-500">Next Billing Date</p>
              <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <p class="text-lg font-semibold text-gray-900">
              <%= @next_billing_date ? @next_billing_date.strftime('%B %d, %Y') : 'N/A' %>
            </p>
          </div>
          
          <!-- Realistic Credit Card Display -->
          <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
            <div class="flex items-center justify-between mb-4">
              <p class="text-sm font-medium text-gray-500">Payment Method</p>
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            
            <!-- Realistic Credit Card -->
            <div class="relative">
              <div class="w-full h-24 bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg p-4 shadow-lg relative overflow-hidden">
                <!-- Card Background Pattern -->
                <div class="absolute inset-0 opacity-10">
                  <div class="absolute top-2 right-2 w-6 h-6 bg-white rounded-full"></div>
                  <div class="absolute top-2 right-10 w-6 h-6 bg-white rounded-full"></div>
                </div>
                
                <!-- Card Content -->
                <div class="relative z-10 h-full flex flex-col justify-between">
                  <div class="flex justify-between items-start">
                    <div class="w-8 h-5 bg-gradient-to-r from-yellow-400 to-yellow-500 rounded-sm"></div>
                    <span class="text-white text-xs font-semibold">VISA</span>
                  </div>
                  
                  <div>
                    <div class="text-white text-base font-mono tracking-widest mb-1">•••• •••• •••• 4242</div>
                    <div class="flex justify-between text-white text-xs">
                      <span>JOHN DOE</span>
                      <span>12/26</span>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Card Details -->
              <div class="mt-3 flex items-center justify-between text-sm">
                <span class="text-gray-600">Primary Card</span>
                <span class="text-green-600 font-medium flex items-center">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-1.5"></div>
                  Active
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Usage Statistics -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <% @usage_stats.each do |key, stats| %>
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900"><%= key.to_s.humanize %></h3>
            <% icon_class = case key
                           when :websites then 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9'
                           when :monthly_audits then 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4'
                           when :users then 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'
                           end %>
            <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_class %>"/>
            </svg>
          </div>
          
          <div class="mb-4">
            <div class="flex items-end justify-between mb-2">
              <div>
                <span class="text-3xl font-bold text-gray-900"><%= stats[:used] %></span>
                <span class="text-gray-500 ml-1">/ <%= stats[:limit] == Float::INFINITY ? '∞' : stats[:limit] %></span>
              </div>
              <span class="text-sm font-medium text-gray-500"><%= stats[:percentage] %>%</span>
            </div>
            
            <div class="w-full bg-gray-200 rounded-full h-2">
              <% bar_color = stats[:percentage] > 90 ? 'red' : stats[:percentage] > 75 ? 'yellow' : 'green' %>
              <div class="bg-gradient-to-r from-<%= bar_color %>-400 to-<%= bar_color %>-500 h-2 rounded-full transition-all duration-300" 
                   style="width: <%= [stats[:percentage], 100].min %>%"></div>
            </div>
          </div>
          
          <p class="text-xs text-gray-500">
            <%= stats[:limit] == Float::INFINITY ? 'Unlimited' : "#{stats[:limit] - stats[:used]} remaining" %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- Recent Payments -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">Recent Payments</h3>
          <%= link_to "View All", billing_payment_history_path, class: "text-sm text-blue-600 hover:text-blue-700 font-medium" %>
        </div>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @payments.any? %>
              <% @payments.each do |payment| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= payment.created_at.strftime('%b %d, %Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= payment.subscription.plan_name.capitalize %> Plan
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_color = case payment.status
                                     when 'succeeded' then 'green'
                                     when 'pending' then 'yellow'
                                     when 'failed' then 'red'
                                     else 'gray'
                                     end %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                      <%= payment.status.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                    $<%= number_with_precision(payment.amount, precision: 2) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if payment.invoice_number %>
                      <a href="#" class="text-blue-600 hover:text-blue-700">
                        <%= payment.invoice_number %>
                      </a>
                    <% else %>
                      -
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="mt-2 text-sm">No payment history available</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>