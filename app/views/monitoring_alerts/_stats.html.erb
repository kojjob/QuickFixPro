<div class="bg-gradient-to-r from-gray-50 via-white to-gray-50 rounded-2xl shadow-lg p-6 mb-6 border border-gray-100">
  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
    </svg>
    Alert Statistics
  </h3>
  
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
    <!-- Total Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Total Alerts</p>
          <p class="text-lg font-bold text-gray-900"><%= alert_stats[:total] || 0 %></p>
        </div>
      </div>
    </div>
    
    <!-- Active Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Active</p>
          <p class="text-lg font-bold text-green-700"><%= alert_stats[:active] || 0 %></p>
        </div>
      </div>
    </div>
    
    <!-- Critical Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Critical</p>
          <p class="text-lg font-bold text-red-700"><%= alert_stats[:critical] || 0 %></p>
        </div>
      </div>
    </div>
    
    <!-- High Priority Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">High</p>
          <p class="text-lg font-bold text-orange-700"><%= alert_stats[:high] || 0 %></p>
        </div>
      </div>
    </div>
    
    <!-- Medium Priority Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Medium</p>
          <p class="text-lg font-bold text-yellow-700"><%= alert_stats[:medium] || 0 %></p>
        </div>
      </div>
    </div>
    
    <!-- Low Priority Alerts -->
    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Low</p>
          <p class="text-lg font-bold text-blue-700"><%= alert_stats[:low] || 0 %></p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Alert Health Indicator -->
  <div class="mt-6 pt-4 border-t border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <span class="text-sm font-medium text-gray-700 mr-3">Alert Health:</span>
        <% 
          total_alerts = alert_stats[:total] || 0
          critical_alerts = alert_stats[:critical] || 0
          high_alerts = alert_stats[:high] || 0
          
          if total_alerts == 0
            health_status = 'excellent'
            health_color = 'green'
            health_message = 'No alerts detected'
          elsif critical_alerts > 0
            health_status = 'critical' 
            health_color = 'red'
            health_message = "#{critical_alerts} critical alert#{'s' if critical_alerts != 1} require immediate attention"
          elsif high_alerts > 0
            health_status = 'warning'
            health_color = 'orange'
            health_message = "#{high_alerts} high priority alert#{'s' if high_alerts != 1} need review"
          elsif alert_stats[:active] && alert_stats[:active] > 5
            health_status = 'attention'
            health_color = 'yellow'
            health_message = "Multiple active alerts detected"
          else
            health_status = 'good'
            health_color = 'green'
            health_message = 'Monitoring status is stable'
          end
        %>
        
        <div class="flex items-center">
          <div class="w-3 h-3 bg-<%= health_color %>-500 rounded-full mr-2 animate-pulse"></div>
          <span class="text-sm font-medium text-<%= health_color %>-700 capitalize"><%= health_status %></span>
        </div>
      </div>
      
      <div class="text-sm text-gray-500">
        <%= health_message %>
      </div>
    </div>
    
    <!-- Alert trend indicator -->
    <% if alert_stats[:total] && alert_stats[:total] > 0 %>
      <div class="mt-3">
        <div class="flex items-center text-xs text-gray-500">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <span>Last updated: <%= Time.current.strftime("%I:%M %p") %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>