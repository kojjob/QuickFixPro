<div class="alert-item bg-white hover:bg-gray-50 transition-colors duration-200 border-l-4 <%= alert.severity == 'critical' ? 'border-red-500' : alert.severity == 'high' ? 'border-orange-500' : alert.severity == 'medium' ? 'border-yellow-500' : 'border-blue-500' %>"
     data-monitoring-alerts-target="alertItem"
     data-alert-id="<%= alert.id %>">
  
  <div class="p-6">
    <div class="flex items-start justify-between">
      <!-- Left side: Alert content -->
      <div class="flex items-start space-x-4 flex-1">
        <!-- Selection checkbox -->
        <div class="pt-1">
          <input type="checkbox" 
                 data-action="change->monitoring-alerts#updateSelection"
                 data-alert-id="<%= alert.id %>"
                 class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
        </div>
        
        <!-- Alert icon -->
        <div class="flex-shrink-0 pt-1">
          <% case alert.severity %>
          <% when 'critical' %>
            <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
          <% when 'high' %>
            <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          <% when 'medium' %>
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          <% else %>
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- Alert details -->
        <div class="flex-1 min-w-0">
          <div class="flex items-center space-x-3 mb-2">
            <h3 class="text-lg font-semibold text-gray-900 truncate">
              <%= alert.alert_type.humanize %>
            </h3>
            
            <!-- Severity badge -->
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
              case alert.severity
              when 'critical' then 'bg-red-100 text-red-800'
              when 'high' then 'bg-orange-100 text-orange-800'
              when 'medium' then 'bg-yellow-100 text-yellow-800'
              else 'bg-blue-100 text-blue-800'
              end %>">
              <%= alert.severity.capitalize %>
            </span>
            
            <!-- Status badge -->
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
              case alert.status
              when 'active' then 'bg-green-100 text-green-800'
              when 'acknowledged' then 'bg-yellow-100 text-yellow-800'
              when 'resolved' then 'bg-gray-100 text-gray-800'
              when 'dismissed' then 'bg-red-100 text-red-800'
              end %>">
              <%= alert.status.capitalize %>
            </span>
          </div>
          
          <p class="text-gray-600 mb-3 line-clamp-2">
            <%= alert.message %>
          </p>
          
          <div class="flex items-center text-sm text-gray-500 space-x-4">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= alert.created_at.strftime("%b %d, %Y at %I:%M %p") %>
            </div>
            
            <% if alert.acknowledged_at %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Acknowledged <%= time_ago_in_words(alert.acknowledged_at) %> ago
              </div>
            <% end %>
            
            <% if alert.resolved_at %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Resolved <%= time_ago_in_words(alert.resolved_at) %> ago
              </div>
            <% end %>
          </div>
          
          <!-- Alert data details (if available) -->
          <% if alert.alert_data.present? %>
            <div class="mt-3 p-3 bg-gray-50 rounded-lg">
              <% if alert.alert_data['audit_report_id'] %>
                <div class="flex items-center text-sm text-gray-600 mb-1">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Related Audit Report ID: <%= alert.alert_data['audit_report_id'] %>
                </div>
              <% end %>
              
              <% if alert.alert_data['metric_value'] %>
                <div class="flex items-center text-sm text-gray-600 mb-1">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  Metric Value: <%= alert.alert_data['metric_value'] %>
                  <% if alert.alert_data['threshold'] %>
                    (Threshold: <%= alert.alert_data['threshold'] %>)
                  <% end %>
                </div>
              <% end %>
              
              <% if alert.alert_data['details'] %>
                <div class="text-sm text-gray-600">
                  <%= alert.alert_data['details'] %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Right side: Actions -->
      <div class="flex items-center space-x-2 ml-4">
        <!-- Quick actions -->
        <% if alert.status == 'active' %>
          <%= button_to acknowledge_website_monitoring_alert_path(@website, alert), 
              method: :patch,
              form: { data: { turbo_method: :patch } },
              class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Acknowledge
          <% end %>
        <% end %>
        
        <% if alert.status.in?(['active', 'acknowledged']) %>
          <%= button_to dismiss_website_monitoring_alert_path(@website, alert), 
              method: :patch,
              form: { data: { turbo_method: :patch } },
              class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Dismiss
          <% end %>
        <% end %>
        
        <!-- View details link -->
        <%= link_to website_monitoring_alert_path(@website, alert), 
            class: "inline-flex items-center px-3 py-1.5 border border-blue-300 text-xs font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          View
        <% end %>
      </div>
    </div>
  </div>
</div>