<div class="min-h-screen bg-gradient-to-br from-red-50 via-white to-orange-50">
  <!-- Enhanced Header -->
  <div class="relative bg-gradient-to-r from-red-600 via-orange-600 to-amber-600 shadow-xl">
    <div class="absolute inset-0 bg-black opacity-10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <nav class="flex items-center text-white/80 text-sm mb-2">
            <%= link_to "Websites", websites_path, class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <%= link_to @website.name, website_path(@website), class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <%= link_to "Monitoring Alerts", website_monitoring_alerts_path(@website), class: "hover:text-white transition-colors" %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-white">Alert Details</span>
          </nav>
          <h1 class="text-4xl font-bold text-white tracking-tight flex items-center">
            <% case @alert.severity %>
            <% when 'critical' %>
              <svg class="w-10 h-10 mr-3 text-red-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            <% when 'high' %>
              <svg class="w-10 h-10 mr-3 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% else %>
              <svg class="w-10 h-10 mr-3 text-yellow-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            <% end %>
            <%= @alert.alert_type.humanize %>
          </h1>
          <p class="mt-2 text-red-100 text-lg">Monitoring alert details and management options</p>
        </div>
        
        <!-- Back to Alerts List -->
        <div class="flex items-center space-x-4">
          <%= link_to website_monitoring_alerts_path(@website), 
              class: "bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg hover:bg-white/30 transition-all duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Back to Alerts</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Alert Status and Actions -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <div class="flex items-start justify-between mb-6">
        <div class="flex items-center space-x-4">
          <!-- Status badges -->
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            case @alert.severity
            when 'critical' then 'bg-red-100 text-red-800'
            when 'high' then 'bg-orange-100 text-orange-800'
            when 'medium' then 'bg-yellow-100 text-yellow-800'
            else 'bg-blue-100 text-blue-800'
            end %>">
            <%= @alert.severity.capitalize %> Priority
          </span>
          
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            case @alert.status
            when 'active' then 'bg-green-100 text-green-800'
            when 'acknowledged' then 'bg-yellow-100 text-yellow-800'
            when 'resolved' then 'bg-gray-100 text-gray-800'
            when 'dismissed' then 'bg-red-100 text-red-800'
            end %>">
            <%= @alert.status.capitalize %>
          </span>
        </div>
        
        <!-- Action buttons -->
        <div class="flex items-center space-x-3">
          <% if @alert.status == 'active' %>
            <%= form_with model: [@website, @alert], url: acknowledge_website_monitoring_alert_path(@website, @alert), method: :patch, class: "inline-block" do |f| %>
              <%= f.submit "Acknowledge Alert", 
                  class: "inline-flex items-center px-4 py-2 border border-green-300 text-sm font-medium rounded-md text-green-700 bg-green-50 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" %>
            <% end %>
          <% end %>
          
          <% if @alert.status.in?(['active', 'acknowledged']) %>
            <%= form_with model: [@website, @alert], url: dismiss_website_monitoring_alert_path(@website, @alert), method: :patch, class: "inline-block" do |f| %>
              <%= f.submit "Dismiss Alert", 
                  class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
            <% end %>
          <% end %>
          
          <% if @alert.status.in?(['active', 'acknowledged']) %>
            <!-- Resolve Alert Button (opens modal for resolution notes) -->
            <button data-action="click->modal#open" data-modal-target="resolveModal"
                    class="inline-flex items-center px-4 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Resolve Alert
            </button>
          <% end %>
        </div>
      </div>
      
      <!-- Alert Message -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Alert Message</h3>
        <p class="text-gray-700 text-base leading-relaxed bg-gray-50 p-4 rounded-lg">
          <%= @alert.message %>
        </p>
      </div>
      
      <!-- Timeline -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Alert Timeline</h3>
        <div class="flow-root">
          <ul class="-mb-8">
            <!-- Triggered Event -->
            <li>
              <div class="relative pb-8">
                <div class="relative flex space-x-3">
                  <div>
                    <span class="h-8 w-8 rounded-full bg-red-500 flex items-center justify-center ring-8 ring-white">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                      </svg>
                    </span>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div>
                      <div class="text-sm">
                        <p class="font-medium text-gray-900">Alert Triggered</p>
                      </div>
                      <p class="mt-1 text-sm text-gray-500">
                        <%= @alert.triggered_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            
            <!-- Acknowledged Event -->
            <% if @alert.acknowledged_at %>
              <li>
                <div class="relative pb-8">
                  <div class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></div>
                  <div class="relative flex space-x-3">
                    <div>
                      <span class="h-8 w-8 rounded-full bg-yellow-500 flex items-center justify-center ring-8 ring-white">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </span>
                    </div>
                    <div class="min-w-0 flex-1">
                      <div>
                        <div class="text-sm">
                          <p class="font-medium text-gray-900">Alert Acknowledged</p>
                        </div>
                        <p class="mt-1 text-sm text-gray-500">
                          <%= @alert.acknowledged_at.strftime("%B %d, %Y at %I:%M %p") %>
                          <% if @alert.alert_data&.dig('acknowledged_by_name') %>
                            by <%= @alert.alert_data['acknowledged_by_name'] %>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
            
            <!-- Resolved Event -->
            <% if @alert.resolved_at %>
              <li>
                <div class="relative">
                  <div class="relative flex space-x-3">
                    <div>
                      <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-white">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                      </span>
                    </div>
                    <div class="min-w-0 flex-1">
                      <div>
                        <div class="text-sm">
                          <p class="font-medium text-gray-900">Alert Resolved</p>
                        </div>
                        <p class="mt-1 text-sm text-gray-500">
                          <%= @alert.resolved_at.strftime("%B %d, %Y at %I:%M %p") %>
                          <% if @alert.alert_data&.dig('resolved_by_name') %>
                            by <%= @alert.alert_data['resolved_by_name'] %>
                          <% end %>
                        </p>
                        <% if @alert.alert_data&.dig('resolution_notes') %>
                          <div class="mt-2 p-3 bg-green-50 rounded-lg">
                            <p class="text-sm text-green-800">
                              <strong>Resolution Notes:</strong> <%= @alert.alert_data['resolution_notes'] %>
                            </p>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Alert Details -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-6">Alert Details</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Alert Type</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @alert.alert_type.humanize %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Severity</dt>
            <dd class="mt-1 text-sm text-gray-900 capitalize"><%= @alert.severity %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Current Status</dt>
            <dd class="mt-1 text-sm text-gray-900 capitalize"><%= @alert.status %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Website</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @website.name, website_path(@website), class: "text-blue-600 hover:text-blue-800" %>
              <span class="text-gray-500">(<%= @website.url %>)</span>
            </dd>
          </div>
        </div>
        
        <div class="space-y-4">
          <% if @alert.alert_data.present? %>
            <% @alert.alert_data.each do |key, value| %>
              <% next if key.in?(['acknowledged_by_name', 'resolved_by_name', 'resolution_notes']) %>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= key.humanize %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= value %></dd>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Related Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Related Audit Report -->
      <% if @related_audit %>
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Related Audit Report</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Overall Score</span>
              <span class="text-sm font-medium text-gray-900"><%= @related_audit.overall_score %>%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Scan Date</span>
              <span class="text-sm font-medium text-gray-900"><%= @related_audit.created_at.strftime("%b %d, %Y") %></span>
            </div>
            <div class="pt-3 border-t border-gray-200">
              <%= link_to "View Full Report", audit_report_path(@related_audit), 
                  class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-800" %>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Related Alerts -->
      <% if @related_alerts.any? %>
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Related Alerts</h3>
          <div class="space-y-3">
            <% @related_alerts.each do |related_alert| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900"><%= related_alert.alert_type.humanize %></p>
                  <p class="text-xs text-gray-500"><%= related_alert.triggered_at.strftime("%b %d, %Y") %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= 
                    case related_alert.severity
                    when 'critical' then 'bg-red-100 text-red-800'
                    when 'high' then 'bg-orange-100 text-orange-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-blue-100 text-blue-800'
                    end %>">
                    <%= related_alert.severity %>
                  </span>
                  <%= link_to "View", website_monitoring_alert_path(@website, related_alert), 
                      class: "text-xs text-blue-600 hover:text-blue-800" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Resolve Alert Modal -->
<% if @alert.status.in?(['active', 'acknowledged']) %>
  <div id="resolveModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" data-controller="modal">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Resolve Alert</h3>
        <div class="mt-2 px-7 py-3">
          <%= form_with model: [@website, @alert], url: resolve_website_monitoring_alert_path(@website, @alert), method: :patch, class: "space-y-4" do |f| %>
            <div>
              <label for="resolution_notes" class="block text-sm font-medium text-gray-700 text-left">Resolution Notes</label>
              <textarea id="resolution_notes" name="resolution_notes" rows="4" 
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                        placeholder="Describe how this alert was resolved..."></textarea>
            </div>
            
            <div class="flex items-center">
              <input id="dismiss_related" name="dismiss_related" type="checkbox" value="true"
                     class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
              <label for="dismiss_related" class="ml-2 block text-sm text-gray-900">
                Dismiss related alerts of the same type
              </label>
            </div>
            
            <div class="flex items-center px-4 py-3 space-x-3">
              <%= f.submit "Resolve Alert", 
                  class: "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" %>
              <button type="button" data-action="click->modal#close"
                      class="px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500">
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>