<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">QuickFixPro API Documentation</h1>
        <p class="text-gray-600 text-lg">Version: <%= @api_documentation[:version] %></p>
        <p class="text-gray-600">Base URL: <code class="bg-gray-100 px-2 py-1 rounded"><%= @api_documentation[:base_url] %></code></p>
      </div>

      <!-- Authentication -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Authentication</h2>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="mb-2"><strong>Method:</strong> <%= @api_documentation[:authentication][:method] %></p>
          <p class="mb-2"><strong>Header:</strong> <code class="bg-gray-100 px-2 py-1 rounded"><%= @api_documentation[:authentication][:header] %></code></p>
          <p><strong>Format:</strong> <code class="bg-gray-100 px-2 py-1 rounded"><%= @api_documentation[:authentication][:format] %></code></p>
        </div>
      </div>

      <!-- Endpoints -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">API Endpoints</h2>
        
        <% @api_documentation[:endpoints].each do |endpoint| %>
          <div class="border-b border-gray-200 pb-6 mb-6 last:border-0">
            <div class="flex items-center gap-3 mb-3">
              <span class="px-3 py-1 text-sm font-semibold rounded-full
                <%= endpoint[:method] == 'GET' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                <%= endpoint[:method] %>
              </span>
              <code class="text-lg font-mono text-gray-800"><%= endpoint[:path] %></code>
            </div>
            
            <p class="text-gray-600 mb-4"><%= endpoint[:description] %></p>
            
            <% if endpoint[:parameters] && !endpoint[:parameters].empty? %>
              <div class="mb-4">
                <h4 class="font-semibold text-gray-900 mb-2">Parameters:</h4>
                <div class="bg-gray-50 p-4 rounded-lg">
                  <% endpoint[:parameters].each do |param, description| %>
                    <div class="mb-2 last:mb-0">
                      <code class="font-mono text-sm text-blue-600"><%= param %></code>
                      <span class="text-gray-600 text-sm ml-2"><%= description %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <% if endpoint[:body] && !endpoint[:body].empty? %>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Request Body:</h4>
                <div class="bg-gray-50 p-4 rounded-lg">
                  <% endpoint[:body].each do |field, description| %>
                    <div class="mb-2 last:mb-0">
                      <code class="font-mono text-sm text-blue-600"><%= field %></code>
                      <span class="text-gray-600 text-sm ml-2"><%= description %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Response Formats -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Response Formats</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Success Response</h3>
            <div class="bg-green-50 p-4 rounded-lg">
              <p class="mb-2"><strong>Status:</strong> <%= @api_documentation[:response_formats][:success][:status] %></p>
              <pre class="bg-white p-3 rounded text-sm overflow-x-auto"><%= JSON.pretty_generate(@api_documentation[:response_formats][:success][:body]) %></pre>
            </div>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Error Response</h3>
            <div class="bg-red-50 p-4 rounded-lg">
              <p class="mb-2"><strong>Status:</strong> <%= @api_documentation[:response_formats][:error][:status] %></p>
              <pre class="bg-white p-3 rounded text-sm overflow-x-auto"><%= JSON.pretty_generate(@api_documentation[:response_formats][:error][:body]) %></pre>
            </div>
          </div>
        </div>
      </div>

      <!-- Rate Limiting -->
      <div class="bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Rate Limiting</h2>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="mb-2"><strong>Limit:</strong> <%= @api_documentation[:rate_limiting][:limit] %></p>
          <p><strong>Remaining requests header:</strong> <code class="bg-gray-100 px-2 py-1 rounded"><%= @api_documentation[:rate_limiting][:header] %></code></p>
        </div>
      </div>
    </div>
  </div>
</div>